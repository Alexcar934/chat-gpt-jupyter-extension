{
  "name": "ChatGPT - Jupyter - AI Assistant",
  "description": "ChatGPT-powered AI assistant for Jupyter Notebooks",
  "version": "0.5.9",
  "manifest_version": 2,
  "icons": {
    "16": "logo.png",
    "32": "logo.png",
    "48": "logo.png",
    "128": "logo.png"
  },
  "permissions": [
    "https://*.openai.com/",
    "storage"
],
  "background": {
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*.ipynb",
        "*://*/lab*"
      ],
      "js": ["content-script.js"],
      "css": ["content-script.css"]
    }
  ]
}
